pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from repository
                git 'https://github.com/arklucis/Ansible.git'
            }
        }
        
        stage('Run Molecule Tests') {
            steps {
                // Change to Ansible role directory, list contents, and then run Molecule tests
                dir('08-ansible-03-yandex/playbook/roles/vector-role') {
                    // Change directory and list contents
                    sh 'ls -la'
                    // Run Molecule test
                    sh 'molecule test'
                }
            }
        }
    }
}

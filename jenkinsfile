pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from repository
                git 'https://github.com/arklucis/Ansible.git'
            }
        }
        
        stage('Check Workspace Contents') {
            steps {
                dir('/opt/jenkins_agent/workspace/Declarative Pipeline') {
                    sh 'ls -la'
               }
           }
        }
        
        stage('Run Molecule Tests') {
            steps {
                // Change to Ansible role directory and run Molecule tests
                dir('Ansible/08-ansible-03-yandex/playbook/roles/vector-role') {
                    sh 'molecule test'
                }
            }
        }
    }
}
